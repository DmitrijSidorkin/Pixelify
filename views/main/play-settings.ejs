<% layout('layouts/boilerplate')%>
<div class="card">
  <div class="card-box">
    <div class="image-box">
      <img
        class="card-image"
        id="pixelatedImage"
        src="<%=previewImage %>"
        alt="pixelated image"
      />
    </div>

    <form
      action="/send-play-data"
      method="POST"
      class="settings-select validated-form"
      novalidate
    >
      <div class="setting">
        <h5 class="setting-title">Difficulty</h5>
        <fieldset class="setting-fieldset" name="difficulty">
          <input
            class="field-input"
            type="radio"
            name="difficulty"
            value="1"
            id="difficulty-1"
            onchange="chooseDifficulty(this)"
          />
          <label for="difficulty-1">Very Easy</label>
          <input
            class="field-input"
            type="radio"
            name="difficulty"
            value="2"
            id="difficulty-2"
            onchange="chooseDifficulty(this)"
          />
          <label for="difficulty-2">Easy</label>
          <input
            class="field-input"
            type="radio"
            name="difficulty"
            value="3"
            id="difficulty-3"
            onchange="chooseDifficulty(this)"
          />
          <label for="difficulty-3">Medium</label>
          <input
            class="field-input"
            type="radio"
            name="difficulty"
            value="4"
            id="difficulty-4"
            onchange="chooseDifficulty(this)"
          />
          <label for="difficulty-4">Hard</label>
          <input
            class="field-input"
            type="radio"
            name="difficulty"
            value="5"
            id="difficulty-5"
            onchange="chooseDifficulty(this)"
          />
          <label for="difficulty-5">Very Hard</label>
        </fieldset>
      </div>
      <div class="setting">
        <h5 class="setting-title">Session length</h5>
        <fieldset class="setting-fieldset" name="sessions-length">
          <input
            class="field-input"
            type="radio"
            id="session-length-1"
            name="sessionLength"
            value="3"
          />
          <label for="session-length-1">3</label>
          <input
            class="field-input"
            type="radio"
            id="session-length-2"
            name="sessionLength"
            value="5"
          />
          <label for="session-length-2">5</label>
          <input
            class="field-input"
            type="radio"
            id="session-length-3"
            name="sessionLength"
            value="7"
          />
          <label for="session-length-3">7</label>
          <input
            class="field-input"
            type="radio"
            id="session-length-4"
            name="sessionLength"
            value="9"
          />
          <label for="session-length-4">9</label>
          <input
            class="field-input"
            type="radio"
            id="session-length-5"
            name="sessionLength"
            value="11"
          />
          <label for="session-length-5">11</label>
        </fieldset>
      </div>

      <button class="card-button">Start</button>
    </form>
  </div>
</div>
<script src="/javascripts/playSettings.js"></script>
