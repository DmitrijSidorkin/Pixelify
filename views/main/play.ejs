<% layout('layouts/boilerplate')%>

<div class="container d-flex justify-content-center align-items-center mt-5">
  <div class="row">
    <div class="col-sm-8 offset-sm-2 col-lg-6 offset-lg-3">
      <div class="card shadow">
        <img
          src="https://res.cloudinary.com/dyguovdbc/image/upload/v1676908287/pixelify/placeholder-image_ykgw2b.jpg"
          alt=""
          class="card-img-top"
        />
        <div class="card-body pt-5">
          <h5 class="card-title">What form of game is this game?</h5>
          <form>
            <div class="mb-3">
              <input
                class="form-control"
                type="text"
                id="gamename"
                name="gamename"
                autofocus
                required
              />
            </div>
            <button class="btn btn-success btn-block">Next</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
