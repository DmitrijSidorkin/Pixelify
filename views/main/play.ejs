<% layout('layouts/boilerplate')%>
<div class="card">
  <div class="card-box">
    <div class="loader-wrapper"><div class="loader"></div></div>
    <div class="card-content">
      <div class="image-box"></div>
      <form class="guess-form" action="/update-play-data" method="POST">
        <div id="guess-wrapper">
          <h5 class="card-title">What form of game is this?</h5>
          <div class="field">
            <fieldset id="gameGuesses"></fieldset>
          </div>
        </div>
        <div class="guess-buttons">
          <button
            class="card-button"
            id="button-back"
            value="back"
            name="action"
          >
            Back
          </button>
          <div id="page-counter"></div>
          <button
            type="submit"
            class="card-button"
            id="button-next"
            value="next"
            name="action"
          >
            Next
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
<script src="/javascripts/continuousPlay.js"></script>
