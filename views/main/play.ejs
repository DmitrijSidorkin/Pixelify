<% layout('layouts/boilerplate')%>
<div class="card">
  <div class="card-box">
    <div class="image-box">
      <img
        class="card-image"
        id="pixelatedImage"
        src="<%=image%>"
        alt="pixelated image"
      />
    </div>
    <form action="/update-play-data" method="POST">
      <div id="guess-div">
        <h5 class="card-title">What form of game is this?</h5>
        <div class="field">
          <fieldset>
            <div>
              <input
                class="field-input"
                type="radio"
                id="a"
                name="guess"
                value="<%-gameName%>"
              />
              <label for="a"><%-gameName%></label>
            </div>
            <div>
              <input
                class="field-input"
                type="radio"
                id="b"
                name="guess"
                value="b"
              />
              <label for="b">b</label>
            </div>
            <div>
              <input
                class="field-input"
                type="radio"
                id="c"
                name="guess"
                value="c"
              />
              <label for="c">c</label>
            </div>
            <div>
              <input
                class="field-input"
                type="radio"
                id="d"
                name="guess"
                value="d"
              />
              <label for="d">d</label>
            </div>
          </fieldset>
        </div>
      </div>
      <input
        type="hidden"
        name="sessionId"
        value="<%=fetchedSession.sessionId%>"
      />
      <input type="hidden" name="gameName" value="<%=gameName%>" />
      <input type="hidden" name="imageLink" value="<%=imgLink%>" />
      <div class="guess-buttons">
        <button onclick="prevGuess()" class="card-button" id="button-back">
          Back
        </button>
        <div id="page-counter">
          <%= fetchedSession.sessionData.length+1 %> out of
          <%=fetchedSession.length%>
        </div>
        <button type="submit" class="card-button" id="button-next">Next</button>
      </div>
    </form>
  </div>
</div>
<script src="/javascripts/continuousPlay.js"></script>
