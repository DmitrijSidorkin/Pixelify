<% layout('layouts/boilerplate')%>
<div class="card">
  <div class="card-box">
    <div class="image-box">
      <img
        class="card-image"
        id="pixelatedImage"
        src="<%=image%>"
        alt="pixelated image"
      />
    </div>
    <div id="guess-div">
      <h5 class="card-title">What form of game is this game?</h5>
      <div class="field">
        <label class="field-label" for="guess">Game name</label>
        <input
          class="field-input"
          type="text"
          id="guess"
          name="guess"
          autofocus
          required
        />
      </div>
      <button onclick="checkGuess()" class="card-button">Next</button>
    </div>
    <div id="result-div">
      <h5 class="card-title" id="gameName"><%-gameName%></h5>
      <h5 class="card-title" id="feedback"></h5>

      <button onclick="window.location='/play'" class="card-button">
        Try again
      </button>
    </div>
  </div>
</div>
