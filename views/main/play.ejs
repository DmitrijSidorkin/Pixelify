<% layout('layouts/boilerplate')%>
<div class="card">
  <div class="card-box">
    <div class="image-box">
      <img
        class="card-image"
        id="pixelatedImage"
        src="<%=image%>"
        alt="pixelated image"
      />
    </div>
    <h5 class="card-title">What form of game is this game?</h5>
    <form action="/play" method="POST" class="validated-form" novalidate>
      <div class="field">
        <label class="field-label" for="gamename">Game name</label>
        <input
          class="field-input"
          type="text"
          id="gamename"
          name="gamename"
          autofocus
          required
        />
      </div>
      <button class="card-button">Next</button>
    </form>
  </div>
</div>
