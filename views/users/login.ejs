<% layout('layouts/boilerplate')%>
<div class="card">
  <div class="card-box">
    <div class="image-box">
    <img
      class="card-image"
      id="pixelatedImage"
      src="<%=image%>"
      alt="pixelated image"
    />
  </div>
    <div>
      <h5 class="card-title">Login</h5>
      <form action="/login" method="POST" class="validated-form" novalidate>
        
          <div class="field">
            <label class="field-label" for="username">Username</label>
            <input
              class="text-input"
              type="text"
              id="username"
              name="username"
              autofocus
              required
            />
          </div>
          <div class="field">
            <label class="field-label" for="password">Password</label>
            <input
              class="text-input"
              type="password"
              id="password"
              name="password"
              required
            />
          </div>
        </div>
        <button class="card-button">Login</button>
      </form>
  </div>
</div>
<script src="/javascripts/validateForms.js"></script>